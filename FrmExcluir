
public partial class FrmExcluir : Form
{
    private Tool tool;

    public FrmExcluir(int toolId)
    {
        InitializeComponent();
        LoadTool(toolId);
    }

    private void LoadTool(int id)
    {
        tool = Tool.GetTools().FirstOrDefault(t => t.Id == id);
        if (tool != null)
        {
            lblToolName.Text = tool.Name;
        }
    }

    private void btnDelete_Click(object sender, EventArgs e)
    {
        tool.DeleteTool();
        MessageBox.Show("Ferramenta exclu√≠da com sucesso!");
    }
}
